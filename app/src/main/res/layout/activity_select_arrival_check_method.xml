<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/frame2"
    tools:context="com.android.hacklikeagirl.gottheresafemom.provider.SelectArrivalCheckMethod">

    <TextView
        android:id="@+id/text_select_check_method"
        style="@style/Heading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:gravity="center"
        android:padding="12dp"
        android:text="How do you want your\nfamily and friends\nnotified?"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight=".7"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_determine_by_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When I reach the location" />

        <Button
            android:id="@+id/button_determine_by_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At a specific time" />

        <Button
            android:id="@+id/button_determine_by_flightnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When my flight arrives" />
    </LinearLayout>
</LinearLayout>
