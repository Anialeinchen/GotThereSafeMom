<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.hacklikeagirl.gottheresafemom.provider.SelectArrivalCheckMethod">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_select_check_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How do you want your family and friends notified?"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_determine_by_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="When I reach the location" />

        <Button
            android:id="@+id/button_determine_by_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="At a specific time" />

        <Button
            android:id="@+id/button_determine_by_flightnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="When my flight arrives" />
    </LinearLayout>
</LinearLayout>
