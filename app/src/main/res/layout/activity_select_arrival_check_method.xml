<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.hacklikeagirl.gottheresafemom.provider.SelectArrivalCheckMethod">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/text_select_check_method"
        android:text="How do you want your family and friends notified?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />

    <Button
    android:id="@+id/button_determine_by_location"
    android:text="When I reach the location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    />
        <Button
        android:id="@+id/button_determine_by_time"
        android:text="At a specific time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
        <Button
        android:id="@+id/button_determine_by_flightnr"
        android:text="When my flight arrives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    </LinearLayout>
</LinearLayout>
